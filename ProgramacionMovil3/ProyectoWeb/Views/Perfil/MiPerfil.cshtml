@model Proyecto.BaseDatos.Usuarios

@{
    ViewBag.Title = "MiPerfil";
    Layout = "~/Views/Shared/propuestasLayout.cshtml";
}

<h2>MiPerfil</h2>

<hr>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h1>@Model.UserName</h1></div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->


            <div class="text-center">
            
            
                <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">

           
                <h6>Mi Foto</h6>
           
            </div></hr>


        
        </div><!--/col-3-->
        <div class="col-sm-9">
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" action="/Perfil/Editar" method="post">


                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="first_name"><h4>Id</h4></label>
                                <input type="text" disabled="true" class="form-control" name="first_name" id="first_name" placeholder="@Model.IdUsuario" title="enter your first name if any.">
                            </div>
                        </div>


                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="first_name"><h4>Nombre</h4></label>
                                <input type="text" disabled="true" class="form-control" name="first_name" id="first_name" placeholder="@Model.Nombre" title="enter your first name if any.">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name"><h4>Apellido</h4></label>
                                <input type="text" disabled="true" class="form-control" name="last_name" id="last_name" placeholder="@Model.Apellido" title="enter your last name if any.">
                            </div>
                        </div>


                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="FechaNacimiento"><h4>Fecha de Nacimiento</h4></label>
                                <input type="datetime" disabled="true" class="form-control" name="FechaNacimiento" id="FechaNacimiento" placeholder="@Model.FechaNacimiento" title="enter your password.">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i>  @Html.ActionLink("Editar/Cargar", "Editar", new { id = @Model.IdUsuario }) </button>
                                <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> </button>
                            </div>
                        </div>
                    </form>

                    

                </div><!--/tab-pane-->
                
                
            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    </div><!--/col-9-->
</div><!--/row-->
