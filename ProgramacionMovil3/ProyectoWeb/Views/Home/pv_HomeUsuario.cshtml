                                            </div>


                                            <label>@((!a.Valoracion.Equals(null)) ? "Porcentaje de valoración: " + a.Valoracion.ToString() + "%" : "Aún no posee valoraciones")</label>

                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




